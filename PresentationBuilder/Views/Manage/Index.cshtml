@model PresentationBuilder.Models.IndexViewModel
@{
    Layout = "~/Views/Shared/Home.cshtml";
    ViewBag.Title = "Manage";
}

@section leftPane
{
    <div class="row signUp">
        <div class="col-sm-12 col-md-12  col-lg-12">
            
        </div>
        <div class="col-sm-12 col-md-12  col-lg-12 text-center">
            Manage your account, all you need is here.
        </div>
        <div class="col-sm-12 col-md-12 col-lg-12 text-center">
            <img src="~/Images/presentationBuilder.png" />
        </div>
    </div>
}

<div class="row signButtons">
    <div class="col-sm-4 col-md-6 col-lg-8"></div>
    <div class="col-sm-8 col-md-6 col-lg-4">
        @Html.ActionLink("My Presentations", "Index", "Presentations", null, new { @class = "btn btn-sign" })
    </div>
</div>

<br/>

<div class="row">   
    <div>
        <h4>Change your account settings</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt>Password:</dt>
            <dd>
                [
                @if (Model.HasPassword) {
                    @Html.ActionLink("Change your password", "ChangePassword")
                }
                else
                {
                    @Html.ActionLink("Create", "SetPassword")
                }
                ]
            </dd>
            <dt>External Logins:</dt>
            <dd>
                @Model.Logins.Count [
                @Html.ActionLink("Manage", "ManageLogins") ]
            </dd>
        </dl>
    </div>

    @if (@ViewBag.StatusMessage != "")
    {
    <div class="row">
        <div class="col-lg-12 text-success">
            <span class="glyphicon glyphicon-ok-sign" aria-hidden="true"></span>
            @ViewBag.StatusMessage
        </div>
    </div>
    }
</div>